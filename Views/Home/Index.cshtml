@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SQ20.Net_Wee7_8_Task.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="hero" id="home">
    <div class="main-content">
        <h4>Hi, There !</h4>
        @foreach (var item in Model.Abouts)
        {
              <h1>I'm <span> @item.Name</span></h1>
            <p>
                @item.Description
            </p>
        }

        <div class="social">
            <a href="#"><i class='bx bxl-facebook'></i></a>
            <a href="#"><i class='bx bxl-instagram'></i></a>
            <a href="#"><i class='bx bxl-twitter'></i></a>
            <a href="#"><i class='bx bxl-youtube'></i></a>
        </div>


        <div class="main-btn">
            <a href="#" class="btn">Hire me</a>
            <a href="#" class="btn btn2">Download CV</a>
        </div>
    </div>

    <img src="/images/him.jpeg" class="bg-img" alt="">
</section>

@* <-----About-----------> *@
<div id="about">
    <div class="container">
        <div class="row">
            <div class="about-col-1">
                <img src="/images/him.jpeg" alt="users">
            </div>
            <div class="about-col-2">
                <h2 class="sub-title">About Me<span class="color">.</span></h2>
                @foreach (var item in Model.Abouts)
                {
                    <p>
                        @item.Description
                    </p>
                }
                <ul>
                    <li class="tab-links active-link" onclick="openTab('skills')">Skills</li>
                    <li class="tab-links" onclick="openTab('education')">Education</li>
                    <li class="tab-links" onclick="openTab('experiences')">Experiences</li>
                </ul>

                <div class="tab-contents active-tab" id="skills">
                    @foreach (var item in Model.Skills)
                    {
                        <h3 class="bgcolor"> @item.Name </h3>
                        <p>@item.Description</p>
                    }
                </div>

                <div class="tab-contents active-tab" id="education">
                    @foreach (var item in Model.Educations)
                    {
                        <h3 class="bgcolor">@item.GraduationDate </h3>
                        <p>@item.Degree | @item.School</p>

                    }

                </div>

                <div class="tab-contents experiences" id="experiences">
                    @foreach (var item in Model.Experiences)
                    {
                        <h3 class="bgcolor">@item.Company</h3>
                        <p>@item.Description</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@* <-----------Portfolio-------> *@
<section class="portfolio" id="portfolio">
    <div class="center-text">
        <h2>My <span>Portfolio</span></h2>
    </div>

    <div class="Portfolio-content">
        @foreach (var item in Model.Portfolios)
        {
            <div class="row">
                <img src="@item.Image">
                <div class="main-row">
                    <div class="row-text">
                        <h5>@item.Description </h5>
                    </div>
                    <div class="row-icon">
                        <i class="ri-github-fill"></i>
                    </div>
                </div>
                <h4>@item.Title</h4>
            </div>
        }

    </div>
</section>


<!-- Services -->
<section class="services" id="services">
    <div class="center-text">
        <h2>My <span>Services</span></h2>
    </div>

    <div class="services-content">
        @foreach (var item in Model.Services)
        {
            <div class="box">
                <img src="@item.Image">
                <h3>@item.Title</h3>
                <p>@item.Description</p>
            </div>
        }

    </div>
</section> 

@* ---------Contacts------ *@
 <section class="contact" id="contact">
    <div class="center-text">
        <h2>Contact <span>Precious</span></h2>
    </div>

