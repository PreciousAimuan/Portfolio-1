@model IEnumerable<Portfolio>

@{
    ViewData["Title"] = "Portfolio";
}

<section class="portfolio" id="portfolio">
    <div class="center-text">
        <h2>My <span>Portfolio</span></h2>
    </div>
    @foreach (var items in Model)
    {
        <div class="Portfolio-content">
            <div class="row">
                <img src="@items.Image">
                <div class="main-row">
                    <div class="row-text">
                        <h5>@items.Title</h5>
                    </div>
                    <div class="row-icon">
                        <i class="ri-github-fill"></i>
                    </div>
                </div>
                <h4>@items.Description</h4>
            </div>
            <div class="top-btnn">
                <a asp-controller="Project" asp-action="Create" class="h-btn1">Create</a>
                <a asp-controller="Project" asp-action="Edit" asp-route-Id="@items.Id" class="h-btn1">Edit</a>
            </div>

        </div>
    }
</section>