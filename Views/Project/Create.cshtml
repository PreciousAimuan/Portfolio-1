@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SQ20.Net_Wee7_8_Task.ViewModels.CreatePortfolioViewModel


<form method="post" asp-action="Create" enctype="multipart/form-data" class="editParent">
    <input type="hidden" value="Id" id="Id" />
    <div class="form-group editPage">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group  editPage">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group  editPage">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>