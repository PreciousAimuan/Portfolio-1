@model IEnumerable<Skill>

@{
    ViewData["Title"] = "Skill";
}

<section class="portfolio" id="portfolio">
    <div class="center-text">
        <h2>My <span>Skills</span></h2>
    </div>
    <div class="top-btnn">
        <a asp-controller="Skill" asp-action="Create" class="h-btn1">Create</a>
    </div>
    @foreach (var items in Model)
    {
        <div class="Portfolio-content">
            <div class="row">
               
                <div class="main-row">
                    <div class="row-text">
                        <h5>@items.Name</h5>
                      
                    </div>
                    <div class="row-icon">
                        <i class="ri-github-fill"></i>
                    </div>
                </div>
                <h4>@items.Description</h4>
            </div>
            <div class="top-btnn">
                <a asp-controller="Skill" asp-action="Edit" asp-route-Id="@items.Id" class="h-btn1">Edit</a>
            </div>

        </div>

    }

</section>